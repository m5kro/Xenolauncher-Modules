{
    "name": "EasyRPG",
    "version": "1.0.1",
    "description": "A module to launch RPG Maker 2000/2003 games with EasyRPG Player.",
    "author": "m5kro",
    "license": "CC BY-NC-SA 4.0",
    "dependencies": {
        "player": {
            "universal": {
                "link": "https://ci.easyrpg.org/downloads/macos/EasyRPG-Player-macos.app.zip",
                "unzip": true
            }
        },
        "soundfont": {
            "universal": {
                "link": "https://musical-artifacts.com/artifacts/841/GMGSx.SF2",
                "unzip": false
            }
        }
    },
    "autodetect": {
        "files": [
            "RPG_RT.ldb",
            "RPG_RT.lmt",
            "RPG_RT.ini"
        ],
        "all_required": false
    },
    "gameArgs": {
        "engine": {
            "type": "string",
            "label": "Engine",
            "default": ""
        },
        "encoding": {
            "type": "string",
            "label": "Encoding",
            "default": ""
        },
        "language": {
            "type": "string",
            "label": "Language",
            "default": ""
        },
        "vsync": {
            "type": "boolean",
            "label": "Vsync",
            "default": true
