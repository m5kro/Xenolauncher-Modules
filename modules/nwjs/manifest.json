{
    "name": "NW.js",
    "version": "1.3.2",
    "description": "A module to launch NW.js native games like RPG Maker MV and MZ.",
    "author": "m5kro",
    "license": "GPL-3.0",
    "dependencies": {
        "version/v0.101.0": {
            "x86_64": {
                "link": "https://dl.nwjs.io/v0.101.0/nwjs-sdk-v0.101.0-osx-x64.zip",
                "unzip": true
            },
            "arm64": {
                "link": "https://dl.nwjs.io/v0.101.0/nwjs-sdk-v0.101.0-osx-arm64.zip",
                "unzip": true
            }
        },
        "cheat-js": {
            "universal": {
                "link": "https://raw.githubusercontent.com/emerladCoder/RPG-Maker-MV-Cheat-Menu-Plugin/refs/heads/master/Cheat_Menu/www/js/plugins/Cheat_Menu.js",
                "unzip": false
            }
        },
        "cheat-css": {
            "universal": {
                "link": "https://raw.githubusercontent.com/emerladCoder/RPG-Maker-MV-Cheat-Menu-Plugin/refs/heads/master/Cheat_Menu/www/js/plugins/Cheat_Menu.css",
                "unzip": false
            }
        },
        "bg": {
            "universal": {
                "link": "https://raw.githubusercontent.com/m5kro/RPG-Maker-MacOS-Launcher/refs/heads/main/bg.js",
                "unzip": false
            }
        },
        "disable-child": {
            "universal": {
                "link": "https://raw.githubusercontent.com/m5kro/RPG-Maker-MacOS-Launcher/refs/heads/main/disable-child.js",
                "unzip": false
            }
        },
        "disable-net": {
            "universal": {
                "link": "https://raw.githubusercontent.com/m5kro/RPG-Maker-MacOS-Launcher/refs/heads/main/disable-net.js",
                "unzip": false
            }
        }
    },
    "autodetect": {
        "files": ["nw.dll", "package.json"],
        "all_required": true
    },
    "gameArgs": {
        "cheat": {
            "type": "boolean",
            "label": "Enable Cheat Menu (Press 1 in game)",
            "default": false
        },
        "version": {
            "type": "multi-version",
            "label": "NW.js Version",
            "version-script": "nwjs.js"
        },
        "disableProtection": {
            "type": "boolean",
            "label": "Allow file execution and network access (Not recommended)",
            "default": false
        }
    }
}